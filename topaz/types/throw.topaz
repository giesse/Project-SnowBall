; ===== TYPES: THROW! =========================================================

; This is an internal datatype

make-internal-type 'throw! [
    make: function [arguments] [] [
        make-struct [
            type: throw!
            value: arguments
        ]
    ]
    topaz-make: function [value] [] [should-not-happen "MAKE" "THROW!"]
    mold: function [value indent] [] [should-not-happen "MOLD" "THROW!"]
    do: function [value block] [] [should-not-happen "DO" "THROW!"]
    bind: function [value context extend?] [] [should-not-happen "BIND" "THROW!"]
    compile: function [value block] [] [should-not-happen "COMPILE" "THROW!"]
    equal?: :default-equal?
    copy: function [value] [] [value]
]

should-not-happen: function [name type] [] [
    error make-struct [
        category: "Internal"
        id: "should-not-happen"
        message: rejoin [name " on " type " should not happen"]
    ]
]
