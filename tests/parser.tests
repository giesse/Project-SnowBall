REBOL [
    Type: Module
    Title: "Tests for the compiler front-end"
    Author: "Gabriele Santilli"
    Imports: [%compiler/parser.r %compiler/specials.r %bootstrap/trees.r]
]

[
    test: func [x] [mold-tree parse-code-block :x none]
    test [add 1 2]
]
[
    test [1 + 2]
]
[
    test [add 1 add 2 3]
]
[
    test [add 1 (add 2 3)]
]
[
    test [system/words]
]
[
    test [system/words/add 1 2]
]
[
    test [a: 1 b: 2 add a b]
]
[
    test func [a b] [add a b]
]
[
    test [
        apply :insert [
            series: tail [1 2 3]
            value: 4
            dup
            count: 3
        ]
    ]
]
[
    m: func [[macro] a b] [add a b]
    test [add 1 m 2 3]
]
[
    test [find/only [1 2 3] 2]
]
[
    test [change/part block1 block2 next block1]
]
