REBOL [
    Type: Module
    Title: "Tests for the COLLECT function"
    Author: "Gabriele Santilli"
    Imports: [%bootstrap/collect.r]
]

[
    collect [
        foreach num [1 2 3 4 5 6 7 8 9] [
            if odd? num [keep num]
        ]
    ]
]
[
    collect/into [
        foreach num [1 2 3 4 5 6] [
            keep reduce [
                {<option value="} num {">} num </option> newline
            ]
        ]
    ] ""
]
[
    collect [
        foreach num [1 2 3] [
            keep/only reduce [num]
        ]
    ]
]
