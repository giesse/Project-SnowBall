REBOL [
    Type: Module
    Title: "Tests for Niwashi"
    Author: "Gabriele Santilli"
    Imports: [%bootstrap/niwashi.r %bootstrap/trees.r]
]

[
    mold n: make-niwashi
]
[
    append-child n [type: 'child]
    mold-tree n/root
]
[
    enter-child n [type: 'p]
    append-child n [type: 'text properties: [value: "A paragraph"]]
    mold-tree n/root
]
[
    enter-child n [type: 'b]
    append-child n [type: 'text properties: [value: "Bold"]]
    mold-tree n/root
]
[
    leave-child n
    enter-child n [type: 'i]
    append-child n [type: 'text properties: [value: "Italic"]]
    mold-tree n/root
]
[
    enter-child n [type: 'b]
    append-child n [type: 'text properties: [value: "Bold Italic"]]
    split-branch n 'i
    leave-child n
    attach-branch n
    append-child n [type: 'text properties: [value: "Bold"]]
    mold-tree n/root
]
[
    n: make-niwashi
    ; <p>
    enter-child n [type: 'p]
    ; "some "
    append-child n [type: 'text properties: [value: "some "]]
    ; <b>
    enter-child n [type: 'b]
    ; "bold"
    append-child n [type: 'text properties: [value: "bold"]]
    ; <p>
    split-branch n 'root
    attach-branch n
    mold-tree n/root
]
[
    n: make-niwashi
    ; <b>
    enter-child n [type: 'b]
    ; "bold, "
    append-child n [type: 'text properties: [value: "bold, "]]
    ; <i>
    enter-child n [type: 'i]
    ; "bold-italic, "
    append-child n [type: 'text properties: [value: "bold-italic, "]]
    ; </b>
    split-branch n 'b
    leave-child n
    attach-branch n
    ; "italic"
    append-child n [type: 'text properties: [value: "italic"]]
    mold-tree n/root
]
[
    n: make-niwashi
    ; <table>
    enter-child n [type: 'table]
    ; <tr>
    enter-child n [type: 'tr]
    ; <td>
    enter-child n [type: 'td]
    ; <table>
    enter-child n [type: 'table]
    ; </td>
    attempt [
        split-branch/knots n 'td 'table
        leave-child n
        attach-branch n
    ]
    ; <tr>
    enter-child n [type: 'tr]
    ; <td>
    enter-child n [type: 'td]
    ; "cell"
    append-child n [type: 'text properties: [value: "cell"]]
    mold-tree n/root
]
[
    n: make-niwashi
    define-rules n [
        always [
            on [p div] [set-node node/prop/processed: yes]
        ]
        on [p div] force html
        inside html [
            ignore html
        ]
    ]
    enter-child n [type: 'p]
    enter-child n [type: 'b]
    leave-child n
    leave-child n
    enter-child n [type: 'div]
    enter-child n [type: 'p]
    leave-child n
    leave-child n
    enter-child n [type: 'html]
    enter-child n [type: 'p]
    leave-child n
    leave-child n
    mold-tree n/root
]
